@model IEnumerable<CorpTrainLearning.Models.Module>

@{
    ViewData["Title"] = "Index";
}

<h1>Module</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContentDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ModuleId" class="btn btn-sm">✏️</a> |
                <a asp-action="Details" asp-route-id="@item.ModuleId" class="btn">ℹ️ </a> |
                <a asp-action="Delete" asp-route-id="@item.ModuleId" class="btn">🗑️</a>
            </td>
        </tr>
}
    </tbody>
</table>
