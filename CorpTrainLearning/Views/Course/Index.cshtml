@model IEnumerable<CorpTrainLearning.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-sm-6 col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@course.Title</h5>
                    <p class="card-text flex-grow-1">@course.Description</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Created:</strong> @course.CreationDate.ToString("dd.MM.yyyy")
                    </li>
                    <li class="list-group-item">
                        <strong>Duration:</strong> @course.Duration
                    </li>
                </ul>
                <div class="card-body">
                    <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-primary">✏️</a>
                    <a asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-info">ℹ️</a>
                    <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-danger">🗑️</a>
                </div>
            </div>
        </div>
    }
</div>